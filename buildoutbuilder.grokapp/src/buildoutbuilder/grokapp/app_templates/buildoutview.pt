<div id="buildoutcontext">
<p tal:condition="python: not(context.manager)">No Buildout!</p>
<div tal:condition="context/manager">
  Eggs
  <ul tal:condition="context/manager/eggs">
    <li tal:repeat="item context/manager/eggs">
      <a tal:content="item"/>
    </li>   
  </ul>
</div>

<div tal:condition="context/manager">
  Find-Links
  <ul tal:condition="context/manager/find_links">
    <li tal:repeat="item context/manager/find_links">
      <a tal:content="item"/>
    </li>
  </ul>
</div>

<div tal:condition="context/manager">
  Develop-Dirs
  <ul>
    <li tal:condition="context/manager/develop_dirs" tal:repeat="item context/manager/develop_dirs">
      <a tal:content="item"/>
    </li>
    <a id="new_develop_dir">+</a>
  </ul>
</div>

<div tal:condition="context/manager">
  Parts
  <div tal:condition="context/manager/parts" tal:repeat="part context/manager/parts">
    <h3 tal:content="python: context.manager.parts[part]">Part</h3>
    <div tal:repeat="option python: context.manager.parts[part].options">
      <span tal:content="option"/> 
      = 
      <p tal:repeat="sub python: context.manager.parts[part].options[option]">
	<span tal:repeat="subpart sub">
	  <span tal:content="subpart"/>
	</span>
      </p>
    </div>
  </div>


</div>
