<div id="buildoutview">
  <p tal:condition="python: not(context.buildoutmanager)">No Buildout!</p>
  <p tal:condition="context/buildoutmanager">
    Eggs
    <li tal:repeat="item context/buildoutmanager/eggs">
      <p tal:content="item"/>
    </li>
  </p>
  
  <p tal:condition="context/buildoutmanager">
    Find-Links
    <li tal:repeat="item context/buildoutmanager/find_links">
      <p tal:content="item"/>
    </li>
    <br>
    <a tal:condition="view/buildout_editable" id="show_add_find_link_form">+++</a>
  </p>
  
  <p tal:condition="context/buildoutmanager">
    Develop-Dirs
    <li tal:repeat="item context/buildoutmanager/develop_dirs">
      <p tal:content="item"/>
    </li>
  </p>
  
  <div tal:condition="context/buildoutmanager">
    Parts
    <div tal:repeat="part context/buildoutmanager/parts">
      <h3 tal:content="python: context.buildoutmanager.parts[part]">Part</h3>
      <div tal:repeat="option python: context.buildoutmanager.parts[part].options">
	<span tal:content="option"/> 
	= 
	<p tal:repeat="sub python: context.buildoutmanager.parts[part].options[option]">
	  <span tal:repeat="subpart sub">
	    <span tal:content="subpart"/>
	  </span>
	</p>
      </div>
    </div>
    
    
  </div>
  
